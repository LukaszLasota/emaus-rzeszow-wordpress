{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "custom-block-package/image-text",
  "title": "Obraz i tekst",
  "icon": "media-document",
  "category": "custom-blocks-from-scratch",
  "description": "Blok z obrazem i tekstem",
  "keywords": [
    "image",
    "text"
  ],
  "version": "1",
  "textdomain": "custom-block-package",
  "attributes": {
    "text": {
      "type": "string",
      "default": ""
    },
    "background": {
      "type": "boolean",
      "default": false
    },
    "background_color": {
      "type": "string",
      "default": ""
    },
    "imgID": {
      "type": "number",
      "default": 0
    },
    "imgAlt": {
      "type": "string",
      "default": ""
    },
    "imgURL": {
      "type": "string",
      "default": ""
    },
    "postURL": {
      "type": "object",
      "default": {
        "url": "",
        "opensInNewTab": false
      }
    }
  },
  "editorScript": "file:./index.js",
  "viewStyle": "file:./style-index.css",
  "editorStyle": "file:./index.css",
  "render": "file:./render.php"
}