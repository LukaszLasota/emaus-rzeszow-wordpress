<?xml version="1.0"?>
<ruleset name="Custom Block Package">
	<description>WordPress coding standards for Custom Block Package plugin.</description>

	<!-- Scan these files -->
	<file>index.php</file>
	<file>app/</file>
	<file>phpstan-bootstrap.php</file>
	<file>src/blocks/dynamic-images/render.php</file>
	<file>src/blocks/responsive-image-slider/render.php</file>
	<file>src/blocks/emaus-news-slider/render.php</file>
	<file>src/blocks/image-text/render.php</file>
	<file>src/blocks/map-block/render.php</file>
	<file>src/blocks/meeting-list/render.php</file>
	<file>src/blocks/section-block/render.php</file>

	<!-- Exclude directories -->
	<exclude-pattern>vendor/</exclude-pattern>
	<exclude-pattern>node_modules/</exclude-pattern>
	<exclude-pattern>build/</exclude-pattern>

	<!-- Use WordPress-Extra standard -->
	<rule ref="WordPress-Extra">
		<!-- Allow short array syntax -->
		<exclude name="Universal.Arrays.DisallowShortArraySyntax"/>
		<!-- PSR-4 autoloading - not WordPress file naming -->
		<exclude name="WordPress.Files.FileName.NotHyphenatedLowercase"/>
		<exclude name="WordPress.Files.FileName.InvalidClassFileName"/>
	</rule>

	<!-- WordPress documentation standards -->
	<rule ref="WordPress-Docs"/>

	<!-- Allow camelCase in render.php - variables match block.json attributes -->
	<rule ref="WordPress.NamingConventions.ValidVariableName.VariableNotSnakeCase">
		<exclude-pattern>src/blocks/*/render.php</exclude-pattern>
	</rule>

	<!-- Allow short ternary in render templates -->
	<rule ref="Universal.Operators.DisallowShortTernary.Found">
		<exclude-pattern>src/blocks/*/render.php</exclude-pattern>
	</rule>

	<!-- Check for PHP cross-version compatibility -->
	<config name="minimum_supported_wp_version" value="5.9"/>
	<config name="testVersion" value="7.2-"/>

	<!-- Text domain -->
	<rule ref="WordPress.WP.I18n">
		<properties>
			<property name="text_domain" type="array">
				<element value="custom-block-package"/>
			</property>
		</properties>
	</rule>

	<!-- Allow . in hook names -->
	<rule ref="WordPress.NamingConventions.ValidHookName">
		<properties>
			<property name="additionalWordDelimiters" value="."/>
		</properties>
	</rule>

	<!-- Tabs for indentation -->
	<arg name="tab-width" value="4"/>

	<!-- Show colors and progress -->
	<arg name="colors"/>
	<arg value="sp"/>
</ruleset>