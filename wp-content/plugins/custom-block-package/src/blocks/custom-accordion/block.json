{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "custom-block-package/custom-accordion",
    "title": "Dedykowany blok akordeon",
    "category": "custom-blocks-from-scratch",
    "icon": "menu",
    "description": "Lista akordeonów, każdy element można rozwijać.",
    "supports": {
        "html": false,
        "spacing": {
            "margin": true,  
            "padding": true, 
            "blockGap": true
        }
    },
    "attributes": {
        "accordions": {
            "type": "array",
            "default": []
        }
    },
    "editorScript": "file:./index.js",
    "viewStyle": "file:./style-index.css",
    "viewScript": "file:./frontend.js",
    "editorStyle": "file:./index.css"
}
