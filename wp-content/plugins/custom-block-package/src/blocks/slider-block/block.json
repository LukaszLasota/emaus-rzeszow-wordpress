{
    "$schema": "https://schemas.wp.org/trunk/block.json",
    "apiVersion": 3,
    "name": "custom-block-package/slider-block",
    "title": "Slider Block",
    "icon": "images-alt2",
    "category": "common",
    "description": "A custom slider block using Swiper.js.",
    "keywords": ["slider", "carousel"],
    "version": "1.0.0",
    "textdomain": "slider-block",
    "attributes": {
        "slides": {
            "type": "array",
            "default": []
        }
    },
    "supports": {
        "align": ["wide", "full"],
        "html": false
    },
    "editorScript": "file:./index.js",
    "editorStyle": "file:./editor.scss",
    "style": "file:./style.scss"
}
